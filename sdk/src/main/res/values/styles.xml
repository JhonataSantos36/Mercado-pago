        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="mpsdk_small_grey_light">
        <item name="android:textSize">@dimen/mpsdk_small_text</item>
        <item name="android:textColor">@color/mpsdk_warm_grey</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="mpsdk_regular_white_thin_bold_text">
        <item name="android:textSize">@dimen/mpsdk_regular_text</item>
        <item name="android:textColor">@color/mpsdk_white</item>
    </style>

    <!--bold-->
    <style name="mpsdk_smaller_warm_grey_thin_bold_text">
        <item name="android:textSize">@dimen/mpsdk_small_text</item>
        <item name="android:textColor">@color/mpsdk_warm_grey</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="small_comment">
        <item name="android:textSize">@dimen/mpsdk_smaller_text</item>
        <item name="android:textColor">@color/commentColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.7</item>
    </style>

    <style name="mpsdk_big_text_light">
        <item name="android:textSize">@dimen/mpsdk_big_text</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="Theme.MercadoPagoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MPTransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.ProcessMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
            <item name="android:statusBarColor">@color/mpsdk_process_color_dark</item>
   </style>

    <style name="Theme.InfoMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_info_color_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.CongratsMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_congrats_color_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.CallForAuthorizeMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_call_for_authorize_color_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.RejectionMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_rejection_color_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MercadoPagoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MercadoPagoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

