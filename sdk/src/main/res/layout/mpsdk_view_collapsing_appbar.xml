<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:layout_behavior="com.mercadopago.core.FixAppBarLayoutBehavior">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mpsdk_review_background"
        android:fitsSystemWindows="true"
        app:collapsedTitleGravity="start"
        app:collapsedTitleTextAppearance="@style/mpsdk_collapsing_review_toolbar_text_medium"
        app:contentScrim="@color/mpsdk_review_background"
        app:expandedTitleGravity="center_horizontal"
        app:expandedTitleMarginBottom="25dp"
        app:expandedTitleMarginTop="45dp"
        app:expandedTitleTextAppearance="@style/mpsdk_collapsing_review_toolbar_text_large"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@+id/toolbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpsdk_toolbar_height"
            android:background="@color/mpsdk_review_background"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ReviewToolbarTheme"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>