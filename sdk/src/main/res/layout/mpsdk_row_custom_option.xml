<LinearLayout
    android:id="@+id/mpsdkRowPaymentMethodCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="45dp"
    android:background="@color/mpsdk_white_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mpsdk_list_item_height"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.98"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                tools:src="@drawable/amex"
                android:adjustViewBounds="true"
                android:id="@+id/mpsdkImage"
                android:maxWidth="40dp"
                android:layout_gravity="center_vertical"/>
            <com.mercadopago.customviews.MPTextView
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/mpsdk_list_label"
                tools:text="American Express"
                android:id="@+id/mpsdkDescription"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/mpsdkEditHint"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/mpsdk_arrow_right_grey"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <View
        android:id="@+id/mpsdkSeparator"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mpsdk_separator"/>
</LinearLayout>