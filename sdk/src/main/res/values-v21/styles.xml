<resources>

    <style name="mpsdk_font_roboto_regular">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="mpsdk_font_roboto_light">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="mpsdk_font_roboto_bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="mpsdk_font_roboto_mono">
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="mpsdk_collapsing_toolbar_text_large" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/mpsdk_toolbar_text</item>
    </style>

    <style name="mpsdk_collapsing_toolbar_text_medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/mpsdk_toolbar_text</item>
    </style>

    <style name="mpsdk_collapsing_review_toolbar_text_large" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/mpsdk_review_toolbar_text</item>
    </style>

    <style name="mpsdk_collapsing_review_toolbar_text_medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/mpsdk_review_toolbar_text</item>
    </style>

    <style name="mpsdk_basic_color">
        <item name="android:textColor">@color/mpsdk_black</item>
    </style>

    <style name="Theme.MercadoPagoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/mpsdk_status_bar</item>
        <item name="android:colorPrimary">@color/mpsdk_colorPrimary</item>
    </style>

    <style name="Theme.MercadoPagoTheme.Modal" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_modal_status_bar</item>
    </style>

    <style name="mpsdk_button_normal" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/mpsdk_button</item>
        <item name="android:textSize">@dimen/mpsdk_big_text</item>
        <item name="android:textColor">@color/mpsdk_white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.ProcessMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.ReviewConfirmMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_ryc_status_bar</item>
        <item name="colorControlNormal">@color/mpsdk_color_new_card_text</item>
    </style>

    <style name="Theme.InfoMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_info_color_dark</item>
    </style>

    <style name="Theme.CongratsMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_color_congrats_status_bar</item>
    </style>

    <style name="Theme.InstructionsMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_color_instructions_status_bar</item>
    </style>

    <style name="Theme.CallForAuthorizeMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_color_call_for_authorize_status_bar</item>
    </style>

    <style name="Theme.RejectionMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_color_rejection_status_bar</item>
    </style>

    <style name="Theme.PendingMercadoPagoTheme.NoActionbar" parent="Theme.MercadoPagoTheme.NoActionBar">
        <item name="android:statusBarColor">@color/mpsdk_color_pending_status_bar</item>
    </style>

</resources>
