<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <com.mercadopago.views.MPButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpsdk_button_height"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Crédito"
            android:onClick="submitCredit"
            style="@style/mpsdk_button_normal"/>

        <com.mercadopago.views.MPButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpsdk_button_height"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Débito"
            android:onClick="submitDebit"
            style="@style/mpsdk_button_normal"/>

        <com.mercadopago.views.MPButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpsdk_button_height"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Prepaga"
            android:onClick="submitPrepaid"
            style="@style/mpsdk_button_normal"/>

    </LinearLayout>

</LinearLayout>